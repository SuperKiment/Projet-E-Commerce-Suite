{% extends "layout.html.twig" %}

{% block title %}Register{% endblock %}

{% block content %}
<div class="container">

    <form action="?page=register" class="card p-4 form m-auto" style="width:40%" method="POST">
        <h1>Register</h1>

        {% if form.state == 'danger' %}
        <p class="text-danger">{{form.message}} </p>
        {% endif %}
        {% if form.state == 'success' %}
        <p class="text-success">{{form.message}} </p>
        {% endif %}

        <input type="text" placeholder="Nom" class="form-label" name="firstname">
        <input type="text" placeholder="Prenom" class="form-label" name="lastname">
        <input type="email" placeholder="Email" class="form-label" name="email">
        <input type="password" placeholder="Mot de Passe" class="form-label" name="password">
        <input type="password" placeholder="Confirmer le Mot de Passe" class="form-label" name="passwordVerif">
        <input type="submit" value="Register" class="btn btn-primary" name="submitRegister">
    </form>
</div>
{% endblock %}