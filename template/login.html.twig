{% extends "layout.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="container">

    {% if form.state == 'danger' %}
    <p class="text-danger">{{form.message}} </p>
    {% endif %}
    {% if form.state == 'success' %}
    <p class="text-success">{{form.message}} </p>
    {% endif %}

    <form action="?page=login" class="card p-4 form m-auto" style="width:40%" method="POST">
        <h1>Login</h1>
        <input type="email" placeholder="Email" class="form-label" name="email">
        <input type="password" placeholder="Mot de Passe" class="form-label" name="password">
        <input type="submit" value="Login" class="btn btn-primary" name="submitLogin">
    </form>
</div>
{% endblock %}