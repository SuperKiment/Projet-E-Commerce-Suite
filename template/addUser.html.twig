{% extends "layout.html.twig" %}

{% block title %}Ajouter un Utilisateur{% endblock %}

{% block content %}
<div class="container">

    <form action="?page=addUser" method="POST">
        <h1>Ajouter un Utilisateur</h1>

        {% if form.state == 'danger' %}
        <p class="text-danger">{{form.message}} </p>
        {% endif %}
        {% if form.state == 'success' %}
        <p class="text-success">{{form.message}} </p>
        {% endif %}

        <p><input type="text" placeholder="Nom" class="form-label" name="firstname"></p>
        <p><input type="text" placeholder="Prenom" class="form-label" name="lastname"></p>
        <p><input type="email" placeholder="Email" class="form-label" name="email"></p>
        <p><input type="password" placeholder="Mot de Passe" class="form-label" name="password"></p>
        <p><input type="password" placeholder="Confirmer le Mot de Passe" class="form-label" name="passwordVerif"></p>
        <p><input type="submit" value="Ajouter" class="btn btn-primary" name="submitRegister"></p>
    </form>
</div>
{% endblock %}